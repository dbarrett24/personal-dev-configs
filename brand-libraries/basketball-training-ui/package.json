{
    "name": "@dbarrett24/basketball-training-ui",
    "version": "1.0.1",
    "description": "Basketball Training brand component library",
    "main": "dist/index.js",
    "module": "dist/esm/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/esm/index.js",
            "require": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./Button": {
            "import": "./dist/esm/Button.js",
            "require": "./dist/Button.js",
            "types": "./dist/Button.d.ts"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "lint": "concurrently --raw --kill-others-on-fail --names eslint,prettier,tsc pnpm:lint-ts pnpm:lint-prettier pnpm:ts-check",
        "lint-fix": "pnpm lint-ts-fix && pnpm lint-prettier-fix",
        "lint-prettier": "prettier --cache --check \"src/**/*.{json,js,jsx,ts,tsx}\"",
        "lint-prettier-fix": "prettier --cache --write \"src/**/*.{json,js,jsx,ts,tsx}\"",
        "lint-ts": "eslint src --cache",
        "lint-ts-fix": "pnpm lint-ts --fix",
        "ts-check": "tsc --noEmit",
        "test": "jest"
    },
    "keywords": [
        "react",
        "components",
        "ui",
        "basketball",
        "design-system"
    ],
    "author": "dbarrett24",
    "license": "MIT",
    "dependencies": {
        "@dbarrett24/core-components": "workspace:*",
        "clsx": "^2.1.1",
        "tailwind-merge": "^3.4.0"
    },
    "peerDependencies": {
        "@dbarrett24/theme-system": ">=1",
        "react": ">=18",
        "react-dom": ">=18"
    },
    "devDependencies": {
        "@dbarrett24/theme-system": "workspace:*",
        "@types/react": "^19.0.8",
        "@types/react-dom": "^19.0.3",
        "@dbarrett24/eslint-config-library": "workspace:*",
        "@dbarrett24/jest-config-library": "workspace:*",
        "@dbarrett24/prettier-config": "workspace:*",
        "@dbarrett24/testing-utils": "workspace:*",
        "@dbarrett24/tsup-config": "workspace:*",
        "@dbarrett24/typescript-config": "workspace:*",
        "autoprefixer": "^10.4.20",
        "concurrently": "^8.2.2",
        "eslint": "^8.49.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "postcss": "^8.4.49",
        "prettier": "^3.4.2",
        "prettier-plugin-tailwindcss": "^0.6.11",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "tailwindcss": "^3.4.17",
        "tsup": "^6.6.2",
        "typescript": "^5.8.2"
    },
    "publishConfig": {
        "access": "public"
    },
    "prettier": "@dbarrett24/prettier-config"
}
