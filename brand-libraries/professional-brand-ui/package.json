{
    "name": "@yourname/professional-brand-ui",
    "version": "1.0.0",
    "description": "Professional Brand brand component library with Storybook",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "concurrently --raw 'pnpm:dev:*'",
        "dev:tsup": "tsup --watch",
        "dev:storybook": "storybook dev -p 6006",
        "lint": "concurrently --raw --kill-others-on-fail --names eslint,prettier,tsc pnpm:lint-ts pnpm:lint-prettier pnpm:ts-check",
        "lint-fix": "pnpm lint-ts-fix && pnpm lint-prettier-fix",
        "lint-prettier": "prettier --cache --check \"src/**/*.{json,js,jsx,ts,tsx}\"",
        "lint-prettier-fix": "prettier --cache --write \"src/**/*.{json,js,jsx,ts,tsx}\"",
        "lint-ts": "eslint src --cache",
        "lint-ts-fix": "pnpm lint-ts --fix",
        "ts-check": "tsc --noEmit",
        "test": "jest",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build"
    },
    "keywords": [
        "react",
        "components",
        "ui",
        "basketball",
        "design-system"
    ],
    "author": "Your Name",
    "license": "MIT",
    "dependencies": {
        "@yourname/theme-system": "workspace:*",
        "clsx": "^2.1.1",
        "tailwind-merge": "^3.4.0"
    },
    "peerDependencies": {
        "react": ">=18",
        "react-dom": ">=18"
    },
    "devDependencies": {
        "@chromatic-com/storybook": "^3.2.2",
        "@storybook/addon-essentials": "^8.5.0",
        "@storybook/addon-interactions": "^8.5.0",
        "@storybook/addon-links": "^8.5.0",
        "@storybook/blocks": "^8.5.0",
        "@storybook/react": "^8.5.0",
        "@storybook/react-vite": "^8.5.0",
        "@storybook/test": "^8.5.0",
        "@types/react": "^19.0.8",
        "@types/react-dom": "^19.0.3",
        "@yourname/eslint-config-library": "workspace:*",
        "@yourname/jest-config-library": "workspace:*",
        "@yourname/prettier-config": "workspace:*",
        "@yourname/testing-utils": "workspace:*",
        "@yourname/typescript-config": "workspace:*",
        "autoprefixer": "^10.4.20",
        "concurrently": "^8.2.2",
        "eslint": "^8.49.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "postcss": "^8.4.49",
        "prettier": "^3.4.2",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "storybook": "^8.5.0",
        "tailwindcss": "^3.4.17",
        "tsup": "^6.6.2",
        "typescript": "^5.8.2"
    },
    "publishConfig": {
        "access": "public"
    },
    "prettier": "@yourname/prettier-config"
}

