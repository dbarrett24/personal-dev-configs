{
    "name": "personal-dev-configs",
    "version": "0.0.0",
    "private": true,
    "workspaces": [
        "shared-configs/*",
        "brand-libraries/*",
        "templates/*"
    ],
    "scripts": {
        "cl": "changeset",
        "pc": "turbo run build lint-ts lint-prettier ts-check test",
        "pcf": "pnpm lint-fix && pnpm test-update && pnpm pc",
        "build": "turbo run build",
        "dev": "turbo run dev --parallel",
        "lint": "turbo run lint-ts lint-prettier ts-check",
        "lint-fix": "turbo run lint-ts-fix lint-prettier-fix",
        "test": "turbo run test",
        "test-update": "pnpm build && turbo run test -- -u",
        "test-coverage": "turbo run test -- --coverage",
        "cleanup": "find . -name \"node_modules\" -type d -prune -exec rm -rf {} +",
        "full-rebuild": "pnpm cleanup && pnpm install && pnpm build",
        "upgrade-deps": "pnpm up -riL",
        "ci:version": "changeset version",
        "ci:publish": "pnpm build && changeset publish",
        "create-project": "tsx scripts/create-project.ts",
        "create-brand": "tsx scripts/create-brand.ts",
        "update-configs": "tsx scripts/update-configs.ts",
        "security:validate": "tsx scripts/validate-cursor-rules.ts",
        "security:audit": "pnpm audit --audit-level=high",
        "security:check": "pnpm security:validate && pnpm security:audit"
    },
    "devDependencies": {
        "@changesets/changelog-github": "^0.5.0",
        "@changesets/cli": "^2.27.10",
        "@types/node": "^20.14.9",
        "prettier": "^3.4.2",
        "tsx": "^4.19.2",
        "turbo": "^2.5.5",
        "typescript": "^5.8.2"
    },
    "engines": {
        "node": ">=18",
        "pnpm": ">=10"
    },
    "packageManager": "pnpm@10.13.1"
}
