{
    "name": "@dbarrett24/core-components",
    "version": "1.0.0",
    "description": "Fully-styled core component library following Hammer UI architecture pattern",
    "main": "dist/index.js",
    "module": "dist/esm/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/esm/index.js",
            "require": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "concurrently --raw 'pnpm:dev:*'",
        "dev:tsup": "tsup --watch",
        "dev:storybook": "storybook dev -p 6007",
        "test": "jest",
        "test:watch": "jest --watch",
        "lint": "concurrently --raw --kill-others-on-fail --names eslint,prettier,tsc pnpm:lint-ts pnpm:lint-prettier pnpm:ts-check",
        "lint-fix": "pnpm lint-ts-fix && pnpm lint-prettier-fix",
        "lint-prettier": "prettier --cache --check \"src/**/*.{json,js,jsx,ts,tsx}\"",
        "lint-prettier-fix": "prettier --cache --write \"src/**/*.{json,js,jsx,ts,tsx}\"",
        "lint-ts": "eslint src --cache",
        "lint-ts-fix": "pnpm lint-ts --fix",
        "ts-check": "tsc --noEmit",
        "storybook": "storybook dev -p 6007",
        "build-storybook": "storybook build"
    },
    "keywords": [
        "react",
        "components",
        "styled",
        "tailwindcss",
        "accessibility",
        "a11y",
        "ui",
        "design-system"
    ],
    "author": "dbarrett24",
    "license": "MIT",
    "dependencies": {
        "@dbarrett24/theme-system": "workspace:*"
    },
    "peerDependencies": {
        "react": ">=18",
        "react-dom": ">=18",
        "tailwindcss": ">=3"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.26.0",
        "@babel/preset-react": "^7.26.3",
        "@babel/preset-typescript": "^7.26.0",
        "@chromatic-com/storybook": "^3.2.2",
        "@dbarrett24/eslint-config-library": "workspace:*",
        "@dbarrett24/jest-config-library": "workspace:*",
        "@dbarrett24/prettier-config": "workspace:*",
        "@dbarrett24/testing-utils": "workspace:*",
        "@dbarrett24/tsup-config": "workspace:*",
        "@dbarrett24/typescript-config": "workspace:*",
        "@storybook/addon-essentials": "^8.5.0",
        "@storybook/addon-interactions": "^8.5.0",
        "@storybook/addon-links": "^8.5.0",
        "@storybook/blocks": "^8.5.0",
        "@storybook/react": "^8.5.0",
        "@storybook/react-vite": "^8.5.0",
        "@storybook/test": "^8.5.0",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/jest": "^29.5.14",
        "@types/react": "^19.0.8",
        "@types/react-dom": "^19.0.3",
        "autoprefixer": "^10.4.20",
        "babel-jest": "^29.7.0",
        "concurrently": "^8.2.2",
        "eslint": "^8.49.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "prettier": "^3.4.2",
        "prettier-plugin-tailwindcss": "^0.6.11",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "storybook": "^8.5.0",
        "tailwindcss": "^3.4.17",
        "tsup": "^6.6.2",
        "typescript": "^5.8.2"
    },
    "publishConfig": {
        "access": "public"
    },
    "prettier": "@dbarrett24/prettier-config"
}
