        "@dbarrett24/theme-system": "workspace:*",
        "jotai": "^2.10.3",
        "next": "15.5.4",
        "react": "^19.1.1",
        "react-dom": "^19.1.1",
        "react-hook-form": "^7.52.2",
        "zod": "^3.24.2"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/jest": "^29.5.14",
        "@types/node": "^24.10.0",
        "@types/react": "^19.1.2",
        "@types/react-dom": "^19.1.2",
        "@dbarrett24/eslint-config": "workspace:*",
        "@dbarrett24/jest-config": "workspace:*",
        "@dbarrett24/prettier-config": "workspace:*",
        "@dbarrett24/testing-utils": "workspace:*",
        "@dbarrett24/typescript-config": "workspace:*",
        "autoprefixer": "^10.4.20",
        "concurrently": "^8.2.2",
        "eslint": "^8.57.1",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "postcss": "^8.4.49",
        "prettier": "^3.5.3",
        "tailwindcss": "^3.4.17",
        "typescript": "^5.8.2"
    },
    "prettier": "@dbarrett24/prettier-config"
