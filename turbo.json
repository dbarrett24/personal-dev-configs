{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local"],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", ".next/**", "!.next/cache/**", "storybook-static/**"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "lint-ts": {
            "dependsOn": ["^build"],
            "outputs": ["node_modules/.cache/eslint/**"]
        },
        "lint-prettier": {
            "outputs": ["node_modules/.cache/prettier/**"]
        },
        "lint-ts-fix": {
            "dependsOn": ["^build"],
            "cache": false
        },
        "lint-prettier-fix": {
            "cache": false
        },
        "ts-check": {
            "dependsOn": ["^build"],
            "outputs": []
        },
        "test": {
            "dependsOn": ["^build"],
            "outputs": ["coverage/**", "junit.xml"]
        },
        "storybook": {
            "cache": false,
            "persistent": true
        },
        "build-storybook": {
            "dependsOn": ["^build"],
            "outputs": ["storybook-static/**"]
        }
    }
}

